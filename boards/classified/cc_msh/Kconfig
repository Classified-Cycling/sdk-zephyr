if BOARD_CC_MSH_NRF5340_CPUAPP || BOARD_CC_MSH_NRF5340_CPUAPP_NS

config DOMAIN_CPUNET_BOARD
	string
	default "cc_msh/nrf5340/cpunet"
	help
	  The board which will be used for CPUNET domain when creating a multi
	  image application where one or more images should be located on
	  another board. For example hci_ipc on the nRF5340_cpunet for
	  Bluetooth applications.

endif # BOARD_CC_MSH_NRF5340_CPUAPP || BOARD_CC_MSH_NRF5340_CPUAPP_NS

config DOMAIN_CPUAPP_BOARD
	string
	default "cc_msh/nrf5340/cpuapp"
	depends on BOARD_CC_MSH_NRF5340_CPUNET
	help
	  The board which will be used for CPUAPP domain when creating a multi
	  image application where one or more images should be located on
	  another board.
